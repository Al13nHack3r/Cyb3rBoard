<header class="navbar navbar-fixed-top navbar-inverse" style="background-color: rgba(0,0,0,0.6)">
  <div class="container" style="background-color: transparent">
    <%= link_to image_tag('alien_head.png', width: '80px', height: '50px') + 'Cyb3r Board', root_path, id: 'logo' %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path, class: 'mnu_tag' %></li>
        <li><%= link_to "Help",   help_path, class: 'mnu_tag' %></li>
        <li><%= link_to "About",  about_path, class: 'mnu_tag' %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <p class="mnu_tag">Account <b class="caret"></b></p>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user, class: 'mnu_tag' %></li>
              <li><%= link_to "Settings", '#', class: 'mnu_tag' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete, class: 'mnu_tag' %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, class: 'mnu_tag' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
